<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="Inserisci i dati relativi al nuovo esame che dovrai sostenere"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="15sp"/>


    <EditText
        android:id="@+id/exam_name"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/exam_cfu"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_exam_name"
        android:ems="10"
        android:hint="@string/exam_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/exam_cfu"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/datepicker"
        android:layout_below="@+id/exam_name"
        android:layout_marginTop="23dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_degree_course"
        android:ems="10"
        android:hint="@string/exam_cfu"
        android:inputType="number" />

    <EditText
        android:id="@+id/datepicker"
        android:focusable="true"
        android:inputType="none"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/exam_cfu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_credits"
        android:ems="10"
        android:hint="Data dell'esame"/>

    <android.support.v7.widget.CardView
        android:id="@+id/addFutureExam"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/datepicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/add_exam_button"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>