<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/new_subject_layout">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Inserisci i dati relativi al nuovo insegnamento che vuoi aggiungere"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/subject_name"
        android:elevation="10dp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/prof_name"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_badge_number"
        android:ems="10"
        android:hint="Nome della materia"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/prof_name"
        android:elevation="10dp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/subject_name"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_name"
        android:ems="10"
        android:hint="Nome del professore"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/exam_cfu"
        android:elevation="10dp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/prof_name"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_degree_course"
        android:ems="10"
        android:hint="@string/exam_cfu"
        android:inputType="number" />

    <RelativeLayout
        android:layout_width="240dp"
        android:id="@+id/relative_layout"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exam_cfu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

    <android.support.v7.widget.CardView
        android:id="@+id/color_picker_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/buttonContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Scegli un colore"
            android:textStyle="bold"
            android:textColor="@color/darkgray"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:id="@+id/chosen_color"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/addNewSubject"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relative_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/add_exam_button"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>