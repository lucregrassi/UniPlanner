<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Seleziona la materia"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:id="@+id/aula"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_exam_name"
        android:drawableTint="@color/lightgray"
        android:ems="10"
        android:hint="Aula della lezione"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ora_inizio"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/spinner"
        android:layout_below="@+id/aula"
        android:layout_marginTop="41dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_exam_vote"
        android:drawableTint="@color/lightgray"
        android:ems="10"
        android:focusable="false"
        android:hint="Ora inizio"
        android:inputType="text" />


    <EditText
        android:id="@+id/ora_fine"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/spinner"
        android:layout_alignTop="@+id/ora_inizio"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_action_credits"
        android:drawableTint="@color/lightgray"
        android:ems="10"
        android:focusable="false"
        android:hint="Ora fine"
        android:inputType="text" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ora_fine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/add_exam_button"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>