<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/logo_description"
                    android:paddingBottom="40dp"
                    android:src="@mipmap/ic_app_icon_foreground"
                    tools:layout_editor_absoluteX="154dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:fontFamily="cursive"
                    android:text="UniPlanner"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <EditText
            android:id="@+id/nomeText"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_action_name"
            android:elevation="10dp"
            android:ems="10"
            android:hint="@string/user_name"
            android:inputType="textCapWords|textPersonName" />

        <EditText
            android:id="@+id/cognomeText"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_action_name"
            android:elevation="10dp"
            android:ems="10"
            android:hint="@string/user_surname"
            android:inputType="textCapWords|textPersonName" />

        <EditText
            android:id="@+id/universityText"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_action_university"
            android:elevation="10dp"
            android:ems="10"
            android:hint="@string/university"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/corsoText"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_action_degree_course"
            android:elevation="10dp"
            android:ems="10"
            android:hint="@string/degree_course"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/matricolaText"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_action_badge_number"
            android:elevation="10dp"
            android:ems="10"
            android:hint="@string/badge_number"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/cfuText"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_action_credits"
            android:elevation="10dp"
            android:ems="10"
            android:hint="@string/credits"
            android:inputType="number" />

        <android.support.v7.widget.CardView
            android:id="@+id/start_button"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/start_button"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>